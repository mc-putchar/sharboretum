{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "module": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Enable React JSX support for client components
    "jsx": "react-jsx",

    // Ensure DOM lib types are available for JSX/React components
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client"],

    // Node-style module resolution (required for React/Framer Motion)
    "moduleResolution": "bundler",

    // Helpful interop flags
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}
